<!-- Find Form -->

<div class="find">
    <!-- Image by https://unsplash.com/garciasaldana_ -->
    <div class="find_background parallax-window" data-parallax="scroll" data-image-src="/Frontend/images/find.jpg" data-speed="0.8"></div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="find_title text-center">Find the Adventure of a lifetime</div>
            </div>
            <div class="col-12">
                <div class="find_form_container">
                    <form action="/Search/searchTrip" method="get" id="find_form" class="find_form d-flex flex-md-row flex-column align-items-md-center align-items-start justify-content-md-between justify-content-start flex-wrap">
                        <div class="find_item" style="width:31%">
                            <div>Departure :</div>
                            <select name="departureCity" id="adventure" class="dropdown_item_select find_input">
                                <option hidden="hidden">Departure</option>
                                @foreach (var item in station)
                                {
                                    <option value="@item.stationCode">@item.stationName.ToUpper()</option>
                                }
                            </select>
                        </div>
                        <div class="find_item" style="width:31%">
                            <div>Arrival :</div>
                            <select name="arrivalCity" id="adventure" class="dropdown_item_select find_input">
                                <option hidden="hidden">Arrival</option>
                                @foreach (var item in station)
                                {
                                    <option value="@item.stationCode">@item.stationName.ToUpper()</option>
                                }
                            </select>
                        </div>
                        <div class="find_item" style="width: auto">
                            <div>Date :</div>
                            <input type="date" name="departureDate" class="destination find_input" required="required" placeholder="Date">
                        </div>
                        @*<div class="find_item">
                                <div>Min price</div>
                                <select name="min_price" id="min_price" class="dropdown_item_select find_input">
                                    <option>&nbsp;</option>
                                    <option>Price</option>
                                    <option>Price</option>
                                </select>
                            </div>
                            <div class="find_item">
                                <div>Max price</div>
                                <select name="max_price" id="max_price" class="dropdown_item_select find_input">
                                    <option>&nbsp;</option>
                                    <option>Price</option>
                                    <option>Price</option>
                                </select>
                            </div>*@
                        <button type="submit" class="button find_button">Find</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

