@model IEnumerable<OnlineRailway.TrainName>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.trainName1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainDays)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrainRoutes)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.trainName1)
            </td>
            @{
                string days = "";
                if (item.TrainDays.Any(i => i.Monday == true)) { days += "Mon "; }
                if (item.TrainDays.Any(i => i.Tuesday == true)) { days += "Tue "; }
                if (item.TrainDays.Any(i => i.Wednesday == true)) { days += "Wed "; }
                if (item.TrainDays.Any(i => i.Thursday == true)) { days += "Thu "; }
                if (item.TrainDays.Any(i => i.Friday == true)) { days += "Fri "; }
                if (item.TrainDays.Any(i => i.Saturday == true)) { days += "Sat "; }
                if (item.TrainDays.Any(i => i.Sunday == true)) { days += "Sun "; }
            }
            <td>
                @days
            </td>
            <td>
                @{
                    var routeName = item.TrainRoutes.FirstOrDefault(i => i.name != null);
                }
                @if (routeName != null)
                {
                    @routeName.name
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>


