@model OnlineRailway.TrainRoute

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/AdminLayout.cshtml";

    List<RouteStation> details = ViewBag.routeStations;
}

<h2>Details</h2>

<div>
    <h4>TrainRoute</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.upOrDownStatus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.upOrDownStatus)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TrainName.trainName1)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TrainName.trainName1)
        </dd>
    </dl>
</div>

<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Station</th>
                    <th>Arrival</th>
                    <th>Departure</th>
                    <th>Last Station Distance</th>
                    <th>Next Station Distance</th>
                    <th>Edit/Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in details)
                {
                    <tr>
                        <td>@item.Station.stationName</td>
                        <td>@item.stationArrivalTime</td>
                        <td>@item.stationDepartureTime</td>
                        <td>@item.lastStationDistance</td>
                        <td>@item.nextStationDistance</td>
                        <td>@Html.ActionLink("Edit", "Edit", "RouteStations", new { id = item.id }, null) | @Html.ActionLink("Delete", "Delete", "RouteStations", new { id = item.id }, null)</td>
                    </tr>
                }
                <tr>
                    <td colspan="6">@Html.ActionLink("Add New", "Create", "RouteStations")</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<p>     
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>



